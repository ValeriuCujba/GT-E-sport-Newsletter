<a href="/dashboard">&larr; Back</a>
<div class="admin-title">
  <h2>Add New Post</h2>
</div>

<form action="/add-post" method="POST">

  <label for="title"><b>Title</b></label>
  <input type="text" placeholder="Post Title" name="title" required>


  <label for="category-select">Choose a category:</label>

  <select name="category" id="category-select" required>
    <% data.forEach(category=> { %>
      <option value="<%= category.title %>" <%=category.title==categoryTitle? 'selected' : '' %>>
        <%= category.title %>
      </option>

      <% }) %>
  </select>

  <label for="body"><b>Content</b></label>
  <textarea name="body" cols="50" rows="10"></textarea required>

  <input type="submit" value="Add" class="btn">

</form>